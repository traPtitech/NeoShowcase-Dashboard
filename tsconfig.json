{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "lib": ["esnext", "dom", "dom.iterable"],
    "types": ["vite/client"],
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tsbuildinfo",
    "paths": {
      "/@/*": [
        "src/*"
      ]
    }
  }
}
